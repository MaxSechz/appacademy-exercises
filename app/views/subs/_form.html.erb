<% action_url, button_text, hidden = subs_url, "New Sub", nil %>
<%
if sub.persisted?
  action_url = sub_url(sub)
  button_text = "Update Sub"
  hidden = update_html
end
%>

<h1><%= button_text %></h1>

<br>

<form id="sub_form" action="<%= action_url %>" method="post">
  <%= hidden %>
  <%= token_tag form_authenticity_token %>

  <label>Title<br>
    <input type="text" name="sub[title]" value="<%= sub.title %>"></label>

  <br><br>

  <label>Description<br>
    <textarea name="sub[description]"><%= sub.description %></textarea></label>

  <br>

  <button name="button"><%= button_text %></button>
</form>
